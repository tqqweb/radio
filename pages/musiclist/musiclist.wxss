/* pages/musiclist/musiclist.wxss */
.musicbox{
  width: 690rpx;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
}
.music_t{
  width:690rpx;
  height: 70rpx;
  line-height:70rpx;
  border-bottom: 2rpx solid #aaa;
  position: fixed;
  top: 0;
  left:30rpx;
  background: #fff;
}
.music_t text{
  font-size:36rpx;
  font-weight: bold;
  text-shadow: 0 0 5px #000;
  color: #fff;
  line-height: 32rpx;
}
.musci_b{
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx; 
  float: left;
}
.musicbox .musci_b:nth-of-type(2){
  margin-top: 90rpx;
}
.musci_b image{
  width: 200rpx;
  height: 200rpx;
  float: left;
  display: block;
}
.musci_b .txt1{
  text-align: center;
  display: block;
  float: left;
  width: 490rpx;
  height: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #00C777;
  line-height: 50rpx;
  margin-top: 50rpx;
  overflow: hidden;
}
.musci_b .txt2{
  text-align: center;
  display: block;
  float: left;
  width: 490rpx;
  height: 50rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 50rpx;
  margin-top:10rpx;
  overflow: hidden;
}